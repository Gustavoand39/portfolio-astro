---
import { Image } from "astro:assets";
import LinkButton from "../../ui/LinkButton";

const { key, title, description, image } = Astro.props;
---

<article
  class="bg-white flex flex-col justify-between gap-6 p-6 rounded-lg shadow-md"
>
  <header class="flex-1">
    <h3 class="text-xl font-bold">{title}</h3>
    <p class="mt-2">{description}</p>
  </header>

  <figure class="w-full aspect-w-16 aspect-h-9">
    <Image
      class="rounded-lg w-full h-full object-cover"
      src={image}
      alt={`Project ${title}`}
      transition:name={`project ${key}`}
      loading="lazy"
      height={400}
      width={600}
    />
  </figure>

  <div>
    <LinkButton
      ariaLabel="View project"
      href={`/projects/${key}`}
      target="_self"
      className="rounded-lg w-full"
    >
      Ver proyecto
    </LinkButton>
  </div>
</article>
