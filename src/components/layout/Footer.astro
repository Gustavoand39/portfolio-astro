---
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
---

<footer class="bg-gray-800 text-gray-300 py-8">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <!-- Name -->
      <div class="mb-4 md:mb-0 text-center md:text-left">
        <h3 class="text-lg font-semibold">Gustavo Pascual</h3>
        <p class="text-sm">Desarrollador Web</p>
      </div>

      <!-- Navigation links -->
      <nav class="mb-4 md:mb-0">
        <ul class="flex flex-col md:flex-row items-center gap-4">
          <li>
            <a href="/#home" class="hover:text-gray-400">Inicio</a>
          </li>
          <li>
            <a href=/"#projects" class="hover:text-gray-400">Proyectos</a>
          </li>
          <li>
            <a href="/#work-experience" class="hover:text-gray-400"
              >Experiencia</a
            >
          </li>
          <li>
            <a href="/#skills" class="hover:text-gray-400">Habilidades</a>
          </li>
          <li>
            <a href="/contact" class="hover:text-gray-400">Contacto</a>
          </li>
        </ul>
      </nav>

      <!-- Social media icons -->
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/Gustavoand39"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
        >
          <GitHubIcon className="h-6 w-6 hover:text-gray-400" />
        </a>

        <a
          href="https://www.linkedin.com/in/gustavo-alonso-p-66776a286/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
        >
          <LinkedInIcon className="h-6 w-6 hover:text-gray-400" />
        </a>
      </div>
    </div>
  </div>
</footer>
