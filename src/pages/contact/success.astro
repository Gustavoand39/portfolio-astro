---
import Layout from "../../layouts/Layout.astro";
import LinkButton from "../../components/ui/LinkButton";
---

<Layout title="Gracias">
  <section
    class="flex-1 flex flex-col items-center justify-center gap-8 h-96 w-full md:w-3/5 lg:w-2/5 mx-auto py-12 px-4"
  >
    <h2 class="text-2xl font-semibold text-center">¡Gracias por tu mensaje!</h2>
    <p class="text-center">Me pondré en contacto contigo pronto.</p>

    <LinkButton
      ariaLabel="Back to home"
      href="/"
      target="_self"
      className="rounded-lg"
    >
      Volver al inicio
    </LinkButton>
  </section>
</Layout>
